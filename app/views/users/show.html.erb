<% @pets.each do |pet|%>
<%= pet.name %>
<% end %>

<table class="responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Breed</th>
      <th>Color</th>
      <th>Age</th>
      <th>Notes</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.breed.name %></td>
        <td><%= pet.color%></td>
        <td><%= pet.age%></td>
        <td><%= pet.additional_notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>
